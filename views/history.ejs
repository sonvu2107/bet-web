<!DOCTYPE html>
<html>
<head>
    <title>Lịch sử cược</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        table td, table th {
            vertical-align: middle;
            text-align: center;
            padding: 12px 8px;
        }
        .result-win { color: green; font-weight: bold; }
        .result-lose { color: red; font-weight: bold; }
        .result-wait { color: #1976d2; font-weight: bold; }
    </style>
</head>
<body>
<div class="container">
    <h2>Lịch sử cược</h2>
    <div style="margin-bottom: 16px;"><b>Điểm hiện có:</b> <%= user.score %></div>
    <table>
        <thead>
            <tr>
                <th>Trận đấu</th>
                <th>Đội đã cược</th>
                <th>Điểm cược</th>
                <th>Kết quả</th>
            </tr>
        </thead>
        <tbody>
            <% bets.forEach(bet => { %>
                <tr>
                    <td><%= bet.match %></td>
                    <td><%= bet.team %></td>
                    <td><%= bet.amount %></td>
                    <td>
                        <% if (bet.result === 'win') { %>
                            <span class="result-win">✔ Thắng</span>
                        <% } else if (bet.result === 'lose') { %>
                            <span class="result-lose">✖ Thua</span>
                        <% } else { %>
                            <span class="result-wait">Chờ kết quả</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="btn-group" style="margin-top: 32px;">
        <a class="btn return-home" href="/">Quay về trang chủ</a>
    </div>
</div>
</body>
</html>
