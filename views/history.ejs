<!DOCTYPE html>
<html>
<head>
    <title>Lịch sử cược</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class="container">
    <h2>Lịch sử cược</h2>
    <div style="margin-bottom: 16px;"><b>Điểm hiện có:</b> <%= user.username === 'admin' ? '∞' : user.score %></div>
    <table>
        <thead>
            <tr>
                <th>Trận đấu</th>
                <th>Đội đã cược</th>
                <th>Điểm cược</th>
                <th>Kết quả</th>
            </tr>
        </thead>
        <tbody>
            <% bets.forEach(bet => { %>
                <tr>
                    <td data-label="Trận đấu"><%= bet.match %></td>
                    <td data-label="Đội đã cược"><%= bet.team %></td>
                    <td data-label="Điểm cược"><%= bet.amount %></td>
                    <td data-label="Kết quả">
                        <% if (bet.result === 'win') { %>
                            <span class="result-win">✔ Thắng</span>
                        <% } else if (bet.result === 'lose') { %>
                            <span class="result-lose">✖ Thua</span>
                        <% } else { %>
                            <span class="result-wait">Chờ kết quả</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="btn-group" style="margin-top: 32px;">
        <a class="btn return-home" href="/">Quay về trang chủ</a>
    </div>
</div>
</body>
</html>
